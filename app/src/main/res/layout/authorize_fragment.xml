<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.worldpay.techtest.app.authorize.ui.AuthorizeItemDetailsView
        android:id="@+id/authorize_item_details_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/app_padding_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.worldpay.techtest.app.authorize.ui.AuthorizeCardDetailsFormView
        android:id="@+id/authorize_card_details_form_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/app_padding_medium"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.worldpay.techtest.app.authorize.ui.AuthorizeAddressDetailsFormView
        android:id="@+id/authorize_address_details_form_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/app_padding_medium"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <com.worldpay.techtest.app.authorize.ui.AuthorizeConfirmPaymentView
        android:id="@+id/authorize_confirm_payment_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/app_padding_medium"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>